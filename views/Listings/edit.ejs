<% layout('/layouts/boilerplate') %>

<body>
  <div class="edit-listing-container">
    <h2 class="edit-listing-header">Edit Your Listing</h2>

    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="edit-form" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" id="title" class="form-control" value="<%= listing.title %>" name="listing[title]" required>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" class="form-control" name="listing[description]" required><%= listing.description %></textarea>
      </div>
      
      <% if (listing.image?.url) { %>
        <div class="form-group">
          <label>Current Image</label>
          <img src="<%= listing.image.url %>" alt="Current Listing Image" class="current-image">
        </div>
      <% } %>

      <div class="form-group">
        <div class="image-upload-container">
          <label for="image" class="image-upload-label">
            <i class="fas fa-cloud-upload-alt"></i>
            <span>Click to upload new image</span>
            <input type="file" id="image" class="form-control" name="listing[image]" accept="image/*">
          </label>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="location">Location</label>
          <input type="text" id="location" class="form-control" value="<%= listing.location %>" name="listing[location]" required>
        </div>

        <div class="form-group">
          <label for="country">Country</label>
          <input type="text" id="country" class="form-control" value="<%= listing.country %>" name="listing[country]" required>
        </div>

        <div class="form-group">
          <label for="price">Price (â‚¹)</label>
          <input type="number" id="price" class="form-control" value="<%= listing.price %>" name="listing[price]" min="0" required>
        </div>
      </div>

      <button type="submit" class="submit-btn">
        <i class="fas fa-save"></i> Update Listing
      </button>
    </form>
  </div>
</body>