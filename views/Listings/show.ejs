  <% layout("./layouts/boilerplate.ejs") %>
  <script>
        let mapToken = "<%= process.env.MAP_TOKEN %>";
        let listing = <%- JSON.stringify(listing) %>;
  </script>

    <body>
      <div class="row mt-3">
        <div class="col-8 offset-3">
          <% if (listing) { %> <!-- Check if listing exists -->
            <h3>
              <%= listing.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card">
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image" />
          <div class="card-body">
            <p class="card-text">
            <p>Owner by <b>
                <%= listing.owner.name %>
              </b></p>
            <p>
              <%= listing.description %>
            </p>
            <p>&#8377;<%= listing.price.toLocaleString("en-IN") %>
            </p>
            <p>
              <%= listing.location %>
            </p>
            <p>
              <%= listing.country %>
            </p>
            </p>
          </div>
        </div>

        <div class="d-flex justify-content-center gap-3 mb-5">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
          <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </div>

        <hr>

        <!-- Review Form -->
        <% if (currUser) { %>
          <div class="col-8 offset-3 mb-3">
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
              <div class="mb-3 mt-3">
                <fieldset class="starability-basic">
                  <legend>Rating:</legend>
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                    aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>
              <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                <div class="invalid-feedback">Please fill some comment for review.</div>
              </div>
              <div class="mb-3 mt-3">
                <button class="btn btn-outline-dark">Submit</button>
              </div>
            </form>
            <hr>
            <% } %>
              <!-- Show all reviews for this listing -->
              <% if(listing.reviews .length > 0) {%>
                <div class="row">
                <p><b>Show all reviews</b></p>
                <% for (review of listing.reviews) { %>
                  <div class="card card1 col-5 ms-3 mb-3">
                    <div class="card-body">
                      <h5 class="card-title">@<%= review.author.name %>
                      </h5> <!-- Static name, replace with dynamic name if needed -->
                      <p class="card-text">
                        <%= review.comment %>
                      </p>
                      <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                      <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-dark">Delete</button>
                      </form>
                    </div>
                  </div>
                  <% }; %>
              </div>
                <% } %>
          </div>
          <% } else { %> <!-- If no listing found -->
            <div class="col-8 offset-3">
              <h3>Listing Not Found</h3>
              <p>Sorry, we couldn't find the listing you're looking for.</p>
            </div>
            <% } %>
      </div>
      <div class="col-6 offset-3">
        <h3>Where you'll be</h3>
        <div id="map"></div>
      </div>
      
      <script src="/js/map.js"></script>
    
      
    </body>